<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Основна тема додатку -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Світлі іконки статус-бару -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o" tools:ignore="NewApi">false</item> <!-- Світлі іконки навігаційного бару -->
    </style>

    <style name="Theme.CommunityActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/purple_500</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o" tools:ignore="NewApi">false</item>
    </style>

    <!-- Стиль для BottomNavigationView -->
    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/white</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemIconTint">@color/bottom_nav_text_color</item>
    </style>

        <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
            <!-- Customize your light theme -->
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/white</item>
        </style>

</resources>