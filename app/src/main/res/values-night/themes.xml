<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Темна тема додатку -->
  <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/teal_200</item>
    <item name="colorPrimaryVariant">@color/purple_900</item> <!-- Темніший варіант для темної теми -->
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorOnSecondary">@color/white</item> <!-- Білий текст для контрасту -->
    <item name="android:windowBackground">@color/dark_background</item> <!-- Темний фон -->
    <item name="android:textColor">@color/light_gray</item> <!-- Світліший текст -->
    <item name="android:statusBarColor">@color/purple_900</item> <!-- Темніший статус-бар -->
    <item name="android:navigationBarColor">@color/purple_900</item> <!-- Темніший навігаційний бар -->
    <item name="android:windowLightStatusBar">false</item> <!-- Темні іконки статус-бару -->
  </style>

  <!-- Темна тема додатку -->
  <style name="Theme.CommunityActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="colorPrimary">@color/teal_200</item>
    <item name="colorPrimaryVariant">@color/purple_900</item> <!-- Темніший варіант для темної теми -->
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorOnSecondary">@color/white</item> <!-- Білий текст для контрасту -->
    <item name="android:windowBackground">@color/dark_background</item> <!-- Темний фон -->
    <item name="android:textColor">@color/light_gray</item> <!-- Світліший текст -->
    <item name="android:statusBarColor">@color/purple_900</item> <!-- Темніший статус-бар -->
    <item name="android:navigationBarColor">@color/purple_900</item> <!-- Темніший навігаційний бар -->
    <item name="android:windowLightStatusBar">false</item> <!-- Темні іконки статус-бару -->
  </style>

  <!-- Стиль для BottomNavigationView у темній темі -->
  <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="android:background">@color/dark_background</item> <!-- Темний фон -->
    <item name="itemTextColor">@color/bottom_nav_text_color_dark</item> <!-- Селектор для темної теми -->
    <item name="itemIconTint">@color/bottom_nav_text_color_dark</item> <!-- Колір іконок -->
  </style>

  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Customize your dark theme -->
    <item name="colorPrimary">#2D2D2D</item>
    <item name="colorPrimaryVariant">#1A1A1A</item>
    <item name="colorOnPrimary">@color/light_gray</item>
  </style>

</resources>